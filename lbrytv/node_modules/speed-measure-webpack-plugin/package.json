    "alex": "^7.0.0",
    "husky": "^1.3.1",
    "jest": "^22.4.2",
    "lerna": "^2.9.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "write-good": "^0.11.3"
  },
  "dependencies": {
    "chalk": "^2.0.1"
