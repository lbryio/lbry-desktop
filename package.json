{
  "postinstall": "install-app-deps",
  "build": {
    "asar": false,
    "directories": {
      "app": "app"
    },
    "appId": "io.lbry.LBRY",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "pkg"
    },
    "protocols": [{
      "name": "lbry",
      "role": "Viewer",
      "schemes": ["lbry"]
    }],
    "linux": {
      "target": "deb",
      "desktop": {
        "MimeType": "x-scheme-handler/lbry",
        "Exec": "/opt/LBRY/lbry %U"
      }
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true
    }
  },
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-builder": "^11.7.0",
    "electron-debug": "^1.1.0"
  }
}
